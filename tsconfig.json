{
  "compilerOptions": {
    "jsx": "react",
    "target": "ES2022",                          
    "module": "ES2022",                    
    "lib": ["es6", "dom"],                     
    "allowJs": false,
    "outDir": "build",                          
    "rootDir": "src",
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "sourceMap": true
  },
  "include": ["./src/**/*"]
}